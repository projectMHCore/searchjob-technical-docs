# Правила доступа к загруженным аватарам
<Files *>
    # Разрешаем доступ к изображениям
    <If "%{REQUEST_URI} =~ m#\.(jpg|jpeg|png|gif)$#i">
        Require all granted
    </If>
    
    # Запрещаем выполнение PHP и других скриптов
    <If "%{REQUEST_URI} =~ m#\.(php|pl|py|cgi)$#i">
        Require all denied
    </If>
</Files>

# Настройки безопасности
Options -Indexes
Options -ExecCGI

# Заголовки для изображений
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Header set Cache-Control "public, max-age=31536000"
    Header set Content-Security-Policy "default-src 'none'; img-src 'self'"
</FilesMatch>
